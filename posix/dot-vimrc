set nocompatible
filetype plugin on
syntax on
colorscheme blueshift
helptags $HOME/.vim/doc/
set backupdir=$HOME/backup
set autoread
set autowrite
set browsedir=current
set complete+=k
set history=200
set mouse=a
set ruler
set showcmd						" Display incomplete commands
set encoding=utf-8

"" Enlarge GUI window
if has("gui_running")
    set lines=50 columns=100
endif

"" Indentation
set shiftwidth=4
set tabstop=8
set softtabstop=4
set expandtab
filetype indent on

"" Searching
set hlsearch					" Highlight matches
set incsearch					" Incremental searching
set ignorecase					" Cases insensitive searching
set smartcase					" Unless key has capital letters

"" Tag files

let s:tagfile = findfile("tags", ".;")
if s:tagfile =~ "tags"
    execute "set tags=./tags,tags," . s:tagfile
endif
 
if has("cscope")
    let s:csc_file = findfile("cscope.out", ".;")
    if s:csc_file =~ "cscope.out"
        execute "cs add " . s:csc_file
    endif
endif

nmap <C-_>s :cs find s <C-R>=expand("<cword>")<CR><CR>
nmap <F2> :cs find s <C-R>=expand("<cword>")<CR><CR>
nmap <C-_>g :cs find g <C-R>=expand("<cword>")<CR><CR>
nmap <C-_>c :cs find c <C-R>=expand("<cword>")<CR><CR>
nmap <C-_>t :cs find t <C-R>=expand("<cword>")<CR><CR>
nmap <C-_>e :cs find e <C-R>=expand("<cword>")<CR><CR>
nmap <C-_>f :cs find f <C-R>=expand("<cfile>")<CR><CR>
nmap <C-_>i :cs find i ^<C-R>=expand("<cfile>")<CR>$<CR>
nmap <C-_>d :cs find d <C-R>=expand("<cword>")<CR><CR>
