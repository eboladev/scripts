set nocompatible
filetype plugin on
filetype indent on
syntax on
helptags $HOME/.vim/doc/
set backupdir=$HOME/backup
set autoindent
set autoread
set autowrite
set backspace=indent,eol,start
set browsedir=current
set complete+=k
set history=200
set hlsearch
set incsearch
set mouse=a
set ruler
set shiftwidth=4
set showcmd
set smartindent
set tabstop=4

set tags+=~/.vim/tags/harmattan
